package com.test.begin.aop;

import java.util.Calendar;


// 보조 업무 객체
public class Logger {
	
	public void log(String message) {
	
		
		Calendar now = Calendar.getInstance();
		System.out.printf("[LOG]%tF %tT > %s\n", now, now, message);
		
		
	}
	
	
	// 보조 업무 구현
	public void after() {
		
		System.out.println("보조 업무를 실행합니다.");
		
		
	}
	
	// 보조 업무 구현
	public void around() {
		
		// 주업무를 실행되는 소요시간 기록
		// 1. 기록 시작
		// 2. 주업무 실행
		// 3. 기록 종료
		
		
	}

}
